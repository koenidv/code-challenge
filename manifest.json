{
    "name": "Conference Planner",
    "version": "1.0",
    "description": "Organize all your video conferences with just a few clicks",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "background.js",
            "Conference.js",
            "database.js"
        ],
        "persistent": false
    },
    "permissions": [
        "contextMenus",
        "storage"
    ],
    "icons": {
        "16": "icon.png"
    },
    "browser_action": {
        "default_popup": "popup.html"
    }
}